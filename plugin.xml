<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="pdftasks" version="0.1">

  <requires>
    <import plugin-id="net.sf.jabref.core"/>
  </requires>

  <runtime>
    <library id="pluginCode" type="code" path="classes/"/>
    <library id="pdfboxCode" type="code" path="libraries/pdfbox/"/>
  </runtime>

  <extension id="PDFTasks" plugin-id="net.sf.jabref.core" point-id="SidePanePlugin">
    <parameter id="sidePanePlugin" value="net.sf.jabref.plugins.pdftasks.PDFTasks"/>
    <parameter id="name" value="PDF Tasks"/>
    <parameter id="description" value="Tasks for managing PDF file links"/>
  </extension>

</plugin>
